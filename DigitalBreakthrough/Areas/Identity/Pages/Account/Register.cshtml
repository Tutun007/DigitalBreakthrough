@page
@model RegisterModel
@{
ViewData["Title"] = "Регистрация";
}



<div class="row justify-content-center d-flex align-items-center fullwindow">
  <div class="col-lg-5 col-12 text-center">
    <section>
      <h1>@ViewData["Title"]</h1>
      <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
          <input asp-for="Input.FirstName" class="form-control" placeholder="Имя" />
          <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input asp-for="Input.LastName" class="form-control" placeholder="Фамилия" />
          <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Телефон" />
          <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input asp-for="Input.Email" class="form-control" placeholder="Электронная почта" />
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input asp-for="Input.Password" class="form-control" placeholder="Пароль" />
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Подтвердить пароль" />
          <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
          <p> Уже зарегистрировались?
            <a id="forgot-password" asp-page="./Login">Войти</a>
          </p>
        </div>
        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
      </form>
    </section>
  </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
