@page
@model LoginModel

@{
ViewData["Title"] = "Войти";
}

<div class="row justify-content-center d-flex align-items-center fullwindow">
  <div class="col-lg-5 col-12 text-center">
    <section>
      <h1>@ViewData["Title"]</h1>
      <form id="account" method="post">
        <h4>Для входа используйте учетную запись.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
          <input asp-for="Input.Email" class="form-control" placeholder="Электронная почта" />
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input asp-for="Input.Password" class="form-control" placeholder="Пароль" />
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
          <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
          </p>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Войти</button>
        </div>        
      </form>
    </section>
  </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
